<aiml version="1.0.1" encoding="UTF-8">
<!-- basic_chat.aiml -->

    <category>
        <pattern>HOLA</pattern>
        <template>
            Hola es un placer
        </template>
    </category>

    <category>
        <pattern>CÓMO ESTÁS</pattern>
        <template>
            Muy bien y tú
        </template>
    </category>

    <category>
        <pattern>BIEN TAMBIÉN</pattern>
        <template>
            Eso es excelente
        </template>
    </category>

    <category>
        <pattern>QUÉ ES DERMATOLOGÍA</pattern>
        <template>
            Es una rama de la medicina que trata la piel
        </template>
    </category>

    <category>
        <pattern>QUIÉN TE CREO</pattern>
        <template>
            Ricardo es mi creador!
        </template>
    </category> 

    <category>
        <pattern>QUÉ ESPECIALIDADES TIENEN EN SU RECINTO</pattern>
        <template>
            Por el momento, medicina general, dermatología y traumatología
        </template>
    </category> 

